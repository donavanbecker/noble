  "devDependencies": {
    "async": "^3.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-semistandard": "^16.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^9.2.2",
    "node-gyp": "^8.4.1",
    "nyc": "^15.1.0",
    "prebuildify": "^5.0.0",
